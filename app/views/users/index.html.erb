
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sign in</title>
</head>

<body>
  <div class="main">
    <p class="sign" align="center">Sign in</p>
    <% if flash[:errors]%>
    <p class="error" align="center"><%= flash[:errors] %></p>
    <% end %>
    
      <%= form_tag(loggin_path, method: :get) do %>
      <%= text_field_tag :user_name, "", class: "un ", placeholder: "Username" %>
      <%= password_field_tag :password, "", class: "pass ", placeholder: "Password" %>
      <%= submit_tag "Log-in", :class => "submit"%>
  <% end %>
  <p class="new_user" align="center">
  <%= link_to "New user?", new_user_path %>
 </p>      
    </div>
</body>