<h1>Location's new page!</h1>
<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%=  error %>
<br>
<% end %>
<% end %>


<p>
  <%= form_for @location do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :latitude %>
    <%= f.number_field :latitude, step: :any %>

    <%= f.label :longitude %>
    <%= f.number_field :longitude, step: :any %>
    <%= f.submit %>
  <% end %>
</p>